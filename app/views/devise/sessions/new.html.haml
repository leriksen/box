%h2 Sign In

= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'new-user form-horizontal'}) do |f|

  .form-group
    = f.label :email, class: 'control-label col-sm-2'
    .col-sm-10
      = f.email_field :email, :autofocus => true, class: 'form-control'

  .form-group
    = f.label :password, class: 'control-label col-sm-2'
    .col-sm-10
      = f.password_field :password, class: 'form-control'

  - if devise_mapping.rememberable?
    .form-group
      .col-sm-offset-2.col-sm-10
        .checkbox
          %label
            = f.check_box :remember_me
            Remember me
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit "Sign in", class: "btn btn-default"

= render "devise/shared/links"
