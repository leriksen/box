%nav.navbar.navbar-inverse.navbar-fixed-top{role: 'navigation'}
  .navbar-header
    %button.navbar-toggle{type: 'button', data: {toggle: 'collapse', target: '#collapse'}}
      %span.sr-only Toggle Navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    =link_to Box.site_name, 'http://support.smartpetsoftware.com', class: 'navbar-brand'
  .collapse.navbar-collapse#collapse
    %ul.nav.navbar-nav
      %li.divider
      - if user_signed_in?
        %li.dropdown
          =link_to root_url, class: 'dropdown-toggle', data: {toggle: 'dropdown'} do
            Logged in as #{current_user.email}
            %span.caret
            %ul.dropdown-menu
              %li.active
                =link_to 'Sign Out', destroy_user_session_path, :method => :delete
        - if ((current_user.roles & %w(staff manager admin)).any?)
          %li
            =link_to 'Admin', rails_admin.dashboard_path
      - elsif at_least_one_user?
        %li.active
          = link_to "Sign In", new_user_session_path
        %li.active
          = link_to "Sign Up", new_user_registration_path
      - else
        %li.active
          = link_to "Sign Up", new_user_registration_path
    %ul.nav.navbar-nav.navbar-right
      - if user_signed_in?
        %li
          %a{href: '#'} Owners
        %li
          %a{href: '#'} Animals
        %li
          %a{href: '#'} Bookings