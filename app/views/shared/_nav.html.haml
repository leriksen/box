%nav.top-bar{data: {topbar: ''}}
  %ul.title-area
    %li.name
      %h1
        =link_to Box.site_name, 'http://support.smartpetsoftware.com'
    %li.toggle-topbar.menu-icon
      %a{href: '#'}
        %span Menu
  %section.top-bar-section
    %ul.left
      %li.divider
      - if user_signed_in?
        %li.has-dropdown
          =link_to "Logged in as #{current_user.email}", root_url
          %ul.dropdown
            %li
              =link_to 'Sign Out', destroy_user_session_path, :method => :delete
          %li
            =link_to 'Admin', '#'
      - elsif at_least_one_user?
        %li.active
          = link_to "Sign In", new_user_session_path
      - else
        %li.active
          = link_to "Sign Up", new_user_registration_path
      %li.divider
    %ul.right
      - if user_signed_in?
        %li
          %a{href: '#'} Owners
        %li
          %a{href: '#'} Animals
        %li
          %a{href: '#'} Bookings